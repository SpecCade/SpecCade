*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.star text eol=lf
*.py text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf
